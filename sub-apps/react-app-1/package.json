{
  "name": "react-user-management",
  "version": "1.0.0",
  "description": "React用户管理子应用 - 使用Redux Toolkit状态管理",
  "private": true,
  "scripts": {
    "dev": "vite --port 3001",
    "dev:frontend": "vite --port 3001",
    "dev:backend": "cd backend && ts-node src/app.ts",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "tsc && vite build",
    "build:frontend": "tsc && vite build",
    "build:backend": "tsc --project tsconfig.backend.json",
    "build:all": "npm run build:frontend && npm run build:backend",
    "start:backend": "node backend/dist/app.js",
    "preview": "vite preview --port 3001",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "lint:backend": "eslint backend/src --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:backend:fix": "eslint backend/src --ext ts --fix",
    "type-check": "tsc --noEmit",
    "type-check:backend": "tsc --project tsconfig.backend.json --noEmit"
  },
  "dependencies": {
    "@ant-design/cssinjs": "^1.18.4",
    "@ant-design/icons": "^5.0.1",
    "@reduxjs/toolkit": "^1.9.3",
    "antd": "^5.27.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.8.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.0",
    "dayjs": "^1.11.7",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "csv-parser": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitejs/plugin-legacy": "^4.1.1",
    "vite-plugin-legacy-qiankun": "^0.0.12",
    "eslint": "^8.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "concurrently": "^7.6.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/uuid": "^9.0.2",
    "@types/multer": "^1.4.7",
    "tsx": "^3.12.2",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1"
  }
}